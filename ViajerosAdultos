package co.com.choucair.certification.expedia.interactions;

import net.serenitybdd.core.pages.WebElementFacade;
import net.serenitybdd.screenplay.Actor;
import net.serenitybdd.screenplay.Task;
import net.serenitybdd.screenplay.Tasks;
import net.serenitybdd.screenplay.targets.Target;

import java.util.List;

public class ViajerosAdultos implements Task {

    private String adultos;
    private Target mapeo;

    public ViajerosAdultos(String adultos,Target mapeo){
        this.adultos=adultos;
        this.mapeo=mapeo;
    }

    public static ViajerosAdultos numeroDeAdultos(String adultos,Target mapeo){
        return Tasks.instrumented(ViajerosAdultos.class,adultos,mapeo);
    }

    @Override
    public <T extends Actor> void performAs(T actor) {

        if(!adultos.equals(null)||!adultos.equals(0)) {

            List<WebElementFacade> objetoMapeado = mapeo.resolveAllFor(actor);
            int listaAdultos= Integer.parseInt(adultos)-1;
            for(int i=0;i<listaAdultos;i++){
                objetoMapeado.get(0).click();
                break;
            }
        }
        else {
            System.out.println("Debe de registrarse minimo un adulto");
        }
    }
}
